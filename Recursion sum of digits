#include <iostream>
using namespace std;
int res=0,rem;
int sum(int n);
int main() 
{
    int n;
    cin>>n;
    cout<<sum(n);
	return 0;
}
int sum(int n)
{
    if(n==0)
    return res;
    else
    res=res+n%10;
    sum(n/10);
}

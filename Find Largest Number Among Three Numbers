#include <iostream>
using namespace std;
void large(int n1, int n2, int n3)
{
    if(n1>=n2 && n1>=n3)
    {
        cout<<"Largest Number= "<<n1;
    }
    if(n2>=n3 && n2>=n1)
    {
        cout<<"Largest Number= "<<n2;
        
    }

    if(n3>=n1 && n3>=n2)
    {
        cout<<"Largest Number= "<<n3;
        
    }
}
int main()
{
    int n1,n2,n3;
    cin>>n1>>n2>>n3;
    large(n1,n2,n3);
}
*************************************************************************************************************
This is sample program for finding largest number among three numbers.
Sample Input.
50           //n1
20           //n2
70           //n3
Sample Output.
Largest Number= 70

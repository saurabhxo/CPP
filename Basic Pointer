#include <iostream>
using namespace std;

int main() 
{
    int n,i;
    cin>>n;
    int arr[n];
    for(i=0; i<n; i++)
    cin>>arr[i];
    int *ptr;
    ptr=&arr[0];
    for(i=0; i<n; i++)
    {
         cout<<"Value = "<<*(ptr+i)<<" ";
         cout<<"address = "<<ptr+i<<endl;
    }
    
    return 0;
}

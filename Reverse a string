#include <iostream>
#include <cstring>
using namespace std;

int main() 
{
     int i,j=0,n;
     char res[50];
    string line;
    getline(cin,line);
    n=line.length();
	for(i=(n-1);i>=0;i--)
	{
	    res[j++]=line[i];
	}
	cout<<res;
	return 0;
}

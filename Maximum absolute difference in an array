#include <iostream>
using namespace std;

int main() 
{
    
    int n,i;
    cin>>n;
    int arr[n];
    for(i=0; i<n; i++)
    cin>>arr[i];
    int minEle=arr[0];
    int maxEle=arr[0];
     for(i=0; i<n; i++)
     {
           minEle = min(minEle, arr[i]); 
           maxEle = max(maxEle, arr[i]); 
     }
     cout<<maxEle-minEle;
	return 0;
}
